<Window x:Class="PracticeProject.NoResultsScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PracticeProject"
        mc:Ignorable="d"
        Title="NoResultsScreen" Height="450" Width="800">
    <Grid Background="Gray">
        <Rectangle Fill="White" HorizontalAlignment="Left" Height="199" Stroke="Black" VerticalAlignment="Top" Width="353" Margin="226,116,0,0"/>
        <Border Background="Gray" Height="98" Width="353" Margin="226,140,214.6,182">
            <TextBlock Background="RoyalBlue" Margin="0,10,-0.2,9.6" TextWrapping="Wrap" Text="No Results were Found" VerticalAlignment="Center" Height="78" Width="345"/>
        </Border>
        <Button x:Name ="TrySearchAgainButton" Content="Try Again" HorizontalAlignment="Left" Margin="273,276,0,0" VerticalAlignment="Top" Width="75" Click="TrySearchAgainButton_Click"/>
        <Button x:Name="ExitAppButton" Content="Exit App" HorizontalAlignment="Left" Margin="448,276,0,0" VerticalAlignment="Top" Width="75" Click="ExitAppButton_Click"/>


    </Grid>
</Window>
